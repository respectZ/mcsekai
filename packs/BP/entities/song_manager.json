{
    "format_version": "1.19.0",
    "minecraft:entity": {
        "description": {
            "identifier": "pj:song_manager",
            "is_spawnable": false,
            "is_summonable": true,
            "is_experimental": false,
            "properties": {
                "pj:song": {
                    "client_sync": true,
                    "type": "int",
                    "range": [
                        0,
                        500
                    ],
                    "default": 0
                }
            },
            "animations": {
                "root": "controller.animation.song_manager"
            },
            "scripts": {
                "animate": [
                    "root"
                ]
            }
        },
        "component_groups": {
            "despawn": {
                "minecraft:instant_despawn": {
                    "remove_child_entities": false
                }
            },
            "name_tag_visible": {
                "minecraft:nameable": {
                    "allow_name_tag_renaming": false,
                    "always_show": true
                }
            },
            "name_tag_invisible": {
                "minecraft:nameable": {
                    "allow_name_tag_renaming": false,
                    "always_show": false
                }
            }
        },
        "components": {
            "minecraft:health": {
                "value": 1
            },
            "minecraft:physics": {
                "has_collision": false,
                "has_gravity": false
            },
            "minecraft:collision_box": {
                "height": 0,
                "width": 0
            },
            "minecraft:type_family": {
                "family": [
                    "inanimate"
                ]
            },
            "minecraft:persistent": {},
            "minecraft:fire_immune": {},
            "minecraft:knockback_resistance": {
                "value": 1
            },
            "minecraft:damage_sensor": {
                "triggers": [
                    {
                        "cause": "entity_attack",
                        "deals_damage": false,
                        "on_damage": {
                            "event": "despawn",
                            "filters": {
                                "test": "has_ability",
                                "subject": "other",
                                "value": "instabuild"
                            }
                        }
                    },
                    {
                        "cause": "all",
                        "deals_damage": false
                    }
                ]
            }
        },
        "events": {
            "despawn": {
                "add": {
                    "component_groups": [
                        "despawn"
                    ]
                }
            },
            "reset": {
                "set_property": {
                    "pj:song": 0
                }
            },
            "song:villain": {
                "set_property": {
                    "pj:song": 170
                }
            }
        }
    }
}